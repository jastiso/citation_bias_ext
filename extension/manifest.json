{
  "name": "Citation Bias",
  "description": "Adds probabilistic gender info to Google scholar",
  "version": "1.2",

  "content_scripts": [{
    "css": ["style.css"],
    "js": ["jquery-3.4.1.min.js","content.js"],
    "matches": ["https://scholar.google.com/*", "https://www.ncbi.nlm.nih.gov/pubmed/*"]
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab", "storage"
  ],
  "browser_action": {
      "default_title": "Citation Bias",
      "default_icon": "images/logo.PNG",
      "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "images/logo.png"
  ],
  "manifest_version": 2
}